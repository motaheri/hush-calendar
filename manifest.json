{
    "manifest_version": 3,
    "name": "Hush Calendar",
    "version": "1.0.0",
    "description": "Mutes duplicate Google Calendar tabs and controls notification volume",
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "*://calendar.google.com/*"
    ],
    "incognito": "split",
    "homepage_url": "https://github.com/motaheri/hush-calendar",
    "author": "Mohammad Taheri",
    "minimum_chrome_version": "88",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://calendar.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+M",
                "mac": "Command+Shift+M"
            },
            "description": "Open Hush Calendar popup"
        }
    }
}